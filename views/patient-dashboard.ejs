                    <!-- Fixed script to load appointments -->
                    <script>
                    document.addEventListener("DOMContentLoaded", function () {
                        const patientName = "Vivek"; // Hardcoded patient name instead of template variable
                    
                        // Try to load appointments from localStorage first
                        let appointments = [];
                        const storedAppointments = localStorage.getItem('patientAppointments');
                        
                        if (storedAppointments) {
                            appointments = JSON.parse(storedAppointments);
                            displayAppointments(appointments);
                        } else {
                            // Fallback to API if no local appointments
                            fetch(`/api/appointments/patient-appointments?patientName=${encodeURIComponent(patientName)}`)
                                .then(res => res.json())
                                .then(data => {
                                    displayAppointments(data.appointments);
                                })
                                .catch(err => {
                                    console.error("Failed to load appointments:", err);
                                    // Show sample appointments if API fails
                                    displaySampleAppointments();
                                });
                        }
                        
                        // Function to display appointments
                        function displayAppointments(appointmentsList) {
                            const containers = document.querySelectorAll(".appointment-cards");
                            
                            containers.forEach(container => {
                                container.innerHTML = "";
                                
                                if (!appointmentsList || appointmentsList.length === 0) {
                                    container.innerHTML = "<p>No appointments scheduled.</p>";
                                    return;
                                }
                                
                                appointmentsList.forEach((apt, index) => {
                                    const date = new Date(apt.date);
                                    const day = date.getDate();
                                    const month = date.toLocaleString('default', { month: 'short' });
                                    
                                    const card = `
                                        <div class="appointment-item" data-index="${index}">
                                            <div class="appointment-date">
                                                <div class="date">${day}</div>
                                                <div class="month">${month}</div>
                                            </div>
                                            <div class="appointment-details">
                                                <h4>Dr. ${apt.doctorName}</h4>
                                                <p>${apt.specialty}</p>
                                                <div class="appointment-time">
                                                    <i class="fas fa-clock"></i>
                                                    <span>${apt.time}</span>
                                                </div>
                                            </div>
                                            <div class="appointment-actions">
                                                <button class="btn-secondary btn-sm">Reschedule</button>
                                                <button class="btn-outline btn-sm cancel-appointment">Cancel</button>
                                            </div>
                                        </div>
                                    `;
                                    container.innerHTML += card;
                                });
                                
                                // Add event listeners to cancel buttons
                                const cancelButtons = container.querySelectorAll('.cancel-appointment');
                                cancelButtons.forEach(button => {
                                    button.addEventListener('click', function() {
                                        const appointmentItem = this.closest('.appointment-item');
                                        const index = appointmentItem.getAttribute('data-index');
                                        cancelAppointment(parseInt(index));
                                    });
                                });
                            });
                            
                            // Update the appointment count in the stats
                            const appointmentCountElement = document.querySelector(".stat-card:first-child .stat-number");
                            if (appointmentCountElement) {
                                appointmentCountElement.textContent = appointmentsList.length;
                            }
                        }
                        
                        // Function to cancel an appointment
                        function cancelAppointment(index) {
                            // Get appointments from localStorage
                            const storedAppointments = localStorage.getItem('patientAppointments');
                            if (!storedAppointments) return;
                            
                            let appointments = JSON.parse(storedAppointments);
                            
                            // Confirm cancellation
                            if (confirm(`Are you sure you want to cancel your appointment with Dr. ${appointments[index].doctorName}?`)) {
                                // Remove the appointment at the specified index
                                appointments.splice(index, 1);
                                
                                // Save updated appointments back to localStorage
                                localStorage.setItem('patientAppointments', JSON.stringify(appointments));
                                
                                // Update the UI
                                displayAppointments(appointments);
                                
                                // Show confirmation message
                                alert('Appointment cancelled successfully');
                            }
                        }
                        
                        // Display sample appointments if API fails
                        function displaySampleAppointments() {
                            const sampleAppointments = [
                                {
                                    doctorName: "Sarah Smith",
                                    specialty: "Cardiology",
                                    date: "2023-05-15",
                                    time: "10:00 AM"
