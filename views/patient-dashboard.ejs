                    date: "2023-05-22",
                    time: "2:00 PM"
                }
            ];
            localStorage.setItem('patientAppointments', JSON.stringify(initialAppointments));
        }
        
        // Initialize user profile data in localStorage if not exists
        if (!localStorage.getItem('userProfile')) {
            const initialProfile = {
                fullName: "Vivek",
                email: "john.doe@example.com",
                phone: "+1 (555) 123-4567",
                dateOfBirth: "1985-01-15",
                bloodType: "O+",
                gender: "male",
                address: "123 Main Street, Apt 4B, New York, NY 10001"
            };
            localStorage.setItem('userProfile', JSON.stringify(initialProfile));
        }
        
        // Load user profile data
        function loadUserProfile() {
            const storedProfile = localStorage.getItem('userProfile');
            if (storedProfile) {
                const profile = JSON.parse(storedProfile);
                
                // Update profile section
                document.getElementById('profileFullName').textContent = profile.fullName;
                document.getElementById('profileEmail').textContent = profile.email;
                document.getElementById('profilePhone').textContent = profile.phone;
                
                // Format date of birth for display
                const dob = new Date(profile.dateOfBirth);
                const formattedDob = `${dob.getDate()} ${dob.toLocaleString('default', { month: 'short' })} ${dob.getFullYear()}`;
                document.getElementById('profileDateOfBirth').textContent = formattedDob;
                
                document.getElementById('profileBloodType').textContent = profile.bloodType;
                document.getElementById('profileGender').textContent = profile.gender.charAt(0).toUpperCase() + profile.gender.slice(1);
                document.getElementById('profileAddress').textContent = profile.address;
                
                // Update settings form
                document.getElementById('fullName').value = profile.fullName;
                document.getElementById('email').value = profile.email;
                document.getElementById('phone').value = profile.phone;
                document.getElementById('dateOfBirth').value = profile.dateOfBirth;
                document.getElementById('address').value = profile.address;
                
                // Set select values
                const bloodTypeSelect = document.getElementById('bloodType');
                for (let i = 0; i < bloodTypeSelect.options.length; i++) {
                    if (bloodTypeSelect.options[i].value === profile.bloodType) {
                        bloodTypeSelect.selectedIndex = i;
                        break;
                    }
                }
                
                const genderSelect = document.getElementById('gender');
                for (let i = 0; i < genderSelect.options.length; i++) {
                    if (genderSelect.options[i].value === profile.gender) {
                        genderSelect.selectedIndex = i;
                        break;
                    }
                }
                
                // Update edit profile modal
                document.getElementById('editFullName').value = profile.fullName;
                document.getElementById('editEmail').value = profile.email;
                document.getElementById('editPhone').value = profile.phone;
                document.getElementById('editDateOfBirth').value = profile.dateOfBirth;
                document.getElementById('editAddress').value = profile.address;
                
                // Set select values in edit modal
                const editBloodTypeSelect = document.getElementById('editBloodType');
                for (let i = 0; i < editBloodTypeSelect.options.length; i++) {
                    if (editBloodTypeSelect.options[i].value === profile.bloodType) {
                        editBloodTypeSelect.selectedIndex = i;
                        break;
                    }
                }
                
                const editGenderSelect = document.getElementById('editGender');
                for (let i = 0; i < editGenderSelect.options.length; i++) {
                    if (editGenderSelect.options[i].value === profile.gender) {
                        editGenderSelect.selectedIndex = i;
                        break;
                    }
                }
                
                // Update user name in sidebar
                document.getElementById('userName').textContent = profile.fullName;
            }
        }
        
        // Load user profile on page load
        loadUserProfile();
        
        // Handle appointment form submission
        const appointmentForm = document.getElementById('appointmentForm');
        const saveAppointmentBtn = document.getElementById('saveAppointmentBtn');
        const appointmentModal = document.getElementById('appointmentModal');
        const newAppointmentBtn = document.getElementById('newAppointmentBtn');
        const closeModalBtns = document.querySelectorAll('.close-modal');
        const cancelAppointmentBtn = document.getElementById('cancelAppointmentBtn');
        
        // Doctor booking buttons in Find Doctors section
        const doctorBookBtns = document.querySelectorAll('.doctor-book-btn');
        
        // Populate doctor dropdown based on appointment type
        const appointmentType = document.getElementById('appointmentType');
        const appointmentDoctor = document.getElementById('appointmentDoctor');
        
        appointmentType.addEventListener('change', function() {
            const specialty = this.value;
            appointmentDoctor.innerHTML = '<option value="">Select Doctor</option>';
            
            // Add doctors based on specialty
            const doctors = {
                'general': ['Michael Johnson', 'Robert Williams'],
                'cardiology': ['Sarah Smith', 'Jennifer Davis'],
                'dermatology': ['Lisa Wong', 'David Miller'],
                'neurology': ['James Wilson', 'Patricia Brown'],
                'orthopedics': ['Thomas Anderson', 'Elizabeth Taylor']
            };
            
            if (doctors[specialty]) {
                doctors[specialty].forEach(doctor => {
                    const option = document.createElement('option');
                    option.value = doctor;
                    option.textContent = `Dr. ${doctor}`;
                    appointmentDoctor.appendChild(option);
                });
            }
        });
        
        // Populate time slots based on date and doctor
        const appointmentDate = document.getElementById('appointmentDate');
        const appointmentTime = document.getElementById('appointmentTime');
        
        appointmentDate.addEventListener('change', function() {
            populateTimeSlots();
        });
        
        appointmentDoctor.addEventListener('change', function() {
            populateTimeSlots();
        });
        
        function populateTimeSlots() {
            appointmentTime.innerHTML = '<option value="">Select Time</option>';
            
            // Generate time slots from 9 AM to 5 PM
            const timeSlots = [
                '9:00 AM', '9:30 AM', '10:00 AM', '10:30 AM', 
                '11:00 AM', '11:30 AM', '12:00 PM', '12:30 PM',
                '1:00 PM', '1:30 PM', '2:00 PM', '2:30 PM',
                '3:00 PM', '3:30 PM', '4:00 PM', '4:30 PM'
            ];
            
            timeSlots.forEach(time => {
                const option = document.createElement('option');
                option.value = time;
                option.textContent = time;
                appointmentTime.appendChild(option);
            });
        }
        
        // Open modal when New Appointment button is clicked
        if (newAppointmentBtn) {
            newAppointmentBtn.addEventListener('click', function() {
                appointmentModal.style.display = 'block';
            });
        }
        
        // Open modal when Book Appointment is clicked in Find Doctors section
        doctorBookBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const doctorName = this.getAttribute('data-doctor');
                const specialty = this.getAttribute('data-specialty');
                
                // Set the appointment type based on specialty
                const specialtyValue = specialty.toLowerCase();
                appointmentType.value = specialtyValue;
                
                // Trigger change event to populate doctors
                const event = new Event('change');
                appointmentType.dispatchEvent(event);
                
                // Set the doctor
                for (let i = 0; i < appointmentDoctor.options.length; i++) {
                    if (appointmentDoctor.options[i].text === `Dr. ${doctorName}`) {
                        appointmentDoctor.selectedIndex = i;
                        break;
                    }
                }
                
                // Open the modal
                appointmentModal.style.display = 'block';
            });
        });
        
        // Close modal when X button is clicked
        closeModalBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const modal = this.closest('.modal');
                if (modal) {
                    modal.style.display = 'none';
                }
            });
        });
        
        // Close modal when Cancel button is clicked
        if (cancelAppointmentBtn) {
            cancelAppointmentBtn.addEventListener('click', function() {
                appointmentModal.style.display = 'none';
            });
        }
        
        // Close modal when clicking outside of it
        window.addEventListener('click', function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
            }
        });
        
        // Handle appointment form submission
        if (saveAppointmentBtn) {
            saveAppointmentBtn.addEventListener('click', function() {
                const type = appointmentType.value;
                const doctor = appointmentDoctor.value;
                const date = appointmentDate.value;
                const time = appointmentTime.value;
                const notes = document.getElementById('appointmentNotes').value;
                
                if (!type || !doctor || !date || !time) {
                    alert('Please fill in all required fields');
                    return;
                }
                
                // Create new appointment object
                const newAppointment = {
                    doctorName: doctor.replace('Dr. ', ''),
                    specialty: type.charAt(0).toUpperCase() + type.slice(1),
                    date: date,
                    time: time,
                    notes: notes
                };
                
                // Get existing appointments from localStorage
                let appointments = [];
                const storedAppointments = localStorage.getItem('patientAppointments');
                
                if (storedAppointments) {
                    appointments = JSON.parse(storedAppointments);
                }
                
                // Add new appointment
                appointments.push(newAppointment);
                
                // Save back to localStorage
                localStorage.setItem('patientAppointments', JSON.stringify(appointments));
                
                // Update the UI
                updateAppointmentsUI(appointments);
                
                // Close the modal
                appointmentModal.style.display = 'none';
                
                // Reset form
                appointmentForm.reset();
                
                // Show success message
                alert('Appointment booked successfully!');
            });
        }
        
        // Function to update appointments UI
        function updateAppointmentsUI(appointments) {
            const containers = document.querySelectorAll(".appointment-cards");
            
            containers.forEach(container => {
                container.innerHTML = "";
                
                if (!appointments || appointments.length === 0) {
                    container.innerHTML = "<p>No appointments scheduled.</p>";
                    return;
                }
                
                appointments.forEach((apt, index) => {
                    const date = new Date(apt.date);
                    const day = date.getDate();
                    const month = date.toLocaleString('default', { month: 'short' });
                    
                    const card = `
                        <div class="appointment-item" data-index="${index}">
                            <div class="appointment-date">
                                <div class="date">${day}</div>
                                <div class="month">${month}</div>
                            </div>
                            <div class="appointment-details">
                                <h4>Dr. ${apt.doctorName}</h4>
                                <p>${apt.specialty}</p>
                                <div class="appointment-time">
                                    <i class="fas fa-clock"></i>
                                    <span>${apt.time}</span>
                                </div>
                            </div>
                            <div class="appointment-actions">
                                <button class="btn-secondary btn-sm">Reschedule</button>
                                <button class="btn-outline btn-sm cancel-appointment">Cancel</button>
                            </div>
                        </div>
                    `;
                    container.innerHTML += card;
                });
                
                // Add event listeners to cancel buttons
                const cancelButtons = container.querySelectorAll('.cancel-appointment');
                cancelButtons.forEach(button => {
                    button.addEventListener('click', function() {
                        const appointmentItem = this.closest('.appointment-item');
                        const index = appointmentItem.getAttribute('data-index');
                        cancelAppointment(parseInt(index));
                    });
                });
            });
            
            // Update the appointment count in the stats
            const appointmentCountElement = document.querySelector(".stat-card:first-child .stat-number");
            if (appointmentCountElement) {
                appointmentCountElement.textContent = appointments.length;
            }
        }
        
        // Function to cancel an appointment
        function cancelAppointment(index) {
            // Get appointments from localStorage
            const storedAppointments = localStorage.getItem('patientAppointments');
            if (!storedAppointments) return;
            
            let appointments = JSON.parse(storedAppointments);
            
            // Confirm cancellation
            if (confirm(`Are you sure you want to cancel your appointment with Dr. ${appointments[index].doctorName}?`)) {
                // Remove the appointment at the specified index
                appointments.splice(index, 1);
                
                // Save updated appointments back to localStorage
                localStorage.setItem('patientAppointments', JSON.stringify(appointments));
                
                // Update the UI
                updateAppointmentsUI(appointments);
                
                // Show confirmation message
                alert('Appointment cancelled successfully');
            }
        }
        
        // Navigation functionality
        const navLinks = document.querySelectorAll('.sidebar-nav a');
        const sections = document.querySelectorAll('.dashboard-section');
        
        navLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Remove active class from all links and sections
                navLinks.forEach(l => l.parentElement.classList.remove('active'));
                sections.forEach(s => s.classList.remove('active'));
                
                // Add active class to clicked link
                this.parentElement.classList.add('active');
                
                // Show corresponding section
                const sectionId = this.getAttribute('data-section');
                document.getElementById(sectionId).classList.add('active');
            });
        });
        
        // Toggle sidebar on mobile
